<?xml version="1.0" encoding="utf-8"?>
<!-- Wear OS optimized layout with scrolling support for small watch screens -->
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:boxedEdges="all">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp">

            <!-- Connection Status - Most Important -->
            <TextView
                android:id="@+id/tv_connection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Searching..."
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Stream Control Switch - Primary Action -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:padding="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <!-- Current IP Display -->
            <TextView
                android:id="@+id/tv_ip_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP: Not saved"
                android:textSize="11sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- IP Configuration Section (Collapsible/Manual Override) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual IP:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/et_ip_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="192.168.1.100"
                    android:inputType="numberDecimal"
                    android:text="192.168.10.234"
                    android:textSize="11sp"
                    android:padding="4dp" />

                <Button
                    android:id="@+id/btn_save_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="10sp"
                    android:minWidth="50dp"
                    android:minHeight="0dp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Auto-Fill Button for discovered IP -->
            <Button
                android:id="@+id/btn_autofill_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¡ Use Auto-Detected IP"
                android:textSize="10sp"
                android:minHeight="0dp"
                android:layout_marginBottom="12dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <!-- Sensor Status Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Status:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tv_status_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step: Ready"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_status_accel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accel: Ready"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_status_rotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotation: Ready"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_status_gyro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gyro: Ready"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.wear.widget.BoxInsetLayout>